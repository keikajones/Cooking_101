<body>	

<div class="edit_comment_wrap">
	<h1 id="edit_comment_title">Edit your Comment</h1>

	<%= form_for ([@post, @comment]) do |f| %>
		<%= f.text_area :body, :id => "comment_box" %><br />
		<%= f.submit 'Update'%>
	<% end %>
</div>

<br />

<p class="edit_cancel_link"><%= link_to 'Cancel', post_path(@comment.post) %> | <%= link_to 'Delete', post_comment_path, method: :delete, data: { confirm: "Are you sure you want to delete this comment?" } %></p>

</body>