<h1 class="header" id="sign_in_header">Sign In</h1>

<%= form_tag('/sessions', method: :post, :class => "sign_in_form") do %>
	<%= label_tag :email %>
	<%= email_field_tag :email %><br />
	<%= label_tag :password %>
	<%= password_field_tag :password %><br /><br />
	<%= submit_tag 'Sign In' %>
<% end %>