<!DOCTYPE html>

<body>

	<h1><%= @post.body %></h1>


	<p> <%= link_to 'Add Comment', new_post_comment_path(@post, @comment) %></p>



	<p> Comments: </p>


	<ul>
		<% @post.comments.each do |comment| %>
			<li><%= comment.body %> | <%= link_to 'Edit', edit_post_comment_path(@post, comment) %></li>
		<% end %>
	</ul>

</body>